<% if @projects.any? %>
      <div class="row">
    <% @projects.each do |project| %>
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><a href="/project/<%= project.id %>"><%= project.title %></a></h5>
              <p class="card-text">Volunteers: <%= project.volunteers.length%></p>
              <a href="/project/<%= project.id %>" class="btn btn-primary">Project Details</a>
            </div>
          </div>
        </div>
    <% end %>
      </div>
<% else %>
  <p>There are currently no projects to display.</p>
<% end %>
